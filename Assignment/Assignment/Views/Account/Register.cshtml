@model Assignment.Models.Account
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <h2 class="text-center">Register</h2>

            <form asp-action="Register" asp-controller="Account">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="FullName" for="name">Họ tên</label>
                    <input asp-for="FullName" type="text" id="name" class="form-control" placeholder="Nhập họ tên">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
				<div class="mb-3">
					<label asp-for="Email" for="name">Email</label>
					<input asp-for="Email" type="email" id="emal" class="form-control" placeholder="Nhập email">
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
                <div class="mb-3">
                    <label asp-for="Password" for="name">Mật khẩu</label>
                    <input asp-for="Password" type="password" id="name" class="form-control" placeholder="Nhập mật khẩu">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" for="name">Xác nhận mật khẩu</label>
                    <input asp-for="ConfirmPassword" type="password" id="name" class="form-control" placeholder="Nhập mật khẩu">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Phone" for="phone">Số điện thoại</label>
                    <input asp-for="Phone" type="tel" id="phone" class="form-control" placeholder="Nhập số điện thoại">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Address" for="address">Địa chỉ</label>
                    <input asp-for="Address" type="address" id="address" class="form-control" placeholder="Nhập địa chỉ">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                @if (ViewBag.Info != null)
                {
                    <div class="alert alert-danger">@ViewBag.Info</div>
                }
                <button type="submit" class="btn btn-primary w-100">Register</button>

                <div class="mt-3 text-center">
                    <p>Already have an account? <a asp-action="Login" asp-controller="Account">Login here</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

